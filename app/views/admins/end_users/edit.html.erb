<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset_sm-1">
      <h5><%= @end_user.name %>さんの会員情報編集</h5>
      <%= form_with model: @end_user, url: admins_end_user_path(@end_user.id) do |f| %>
        <div class="row">
          <div class="col-3 offset-md-1"><%= f.label "会員ID" %></div>
          <div class="col-3"><%= @end_user.id %></div>
        </div>
        <div class="row">
          <div class="col-2 offset-md-1"><%= f.label "ユーザー名" %></div>
          <div class="col-1"></div>
          <div class="col-2"><%= f.text_field :name, :size => "15", placeholder: "" %></div>
          <div class="col-1"></div>
        </div>
        <div class="row">
          <div class="col-3 offset-md-1"><%= f.label "メールアドレス" %></div>
          <div class="col-2"><%= f.text_field :email, :size => "15", placeholder: "end_user@example.com" %></div>
        </div>
        <div class="row">
          <div class="col-3 offset-md-1"><%= f.label "会員ステータス" %></div>
            <div class="col-3">
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効" %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "退会" %>
            </div>
        </div>
        <div class="row">
          <div class="col">
            <%= f.submit "変更を保存", class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
