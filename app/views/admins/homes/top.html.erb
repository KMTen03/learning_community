<div class="container">
  <div class="row">
    <div class="col">
      <h4>ユーザー投稿一覧</h4>
      <table class="table">
       <thead class="table-secondary">
        <tr>
          <th>ユーザー名</th>
          <th>学習内容</th>
          <th>学習時間</th>
        </tr>
      </thead>
      <% @posts.each do |post| %>
      <tbody>
        <tr>
         <td>
           <%= link_to admin_order_path(order.id) do %>
             <%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
            <% end %>
         </td>
         <td>
           <%= order.customer.last_name + order.customer.first_name %>
         </td>
         <td>
           <% @total_amount = 0 %>
           <% order.orderdetails.each do |orderdetail| %>
           <% @total_amount += orderdetail.quantity %>
           <% end %>
           <%= @total_amount %>
         </td>
       </tr>
      </tbody>
      <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>
