<!DOCTYPE html>
<html>
  <head>
    <title>LearningCommunity</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
      <script src="https://kit.fontawesome.com/ced6f72b76.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/">LOGOS</a>
        </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if end_user_signed_in? %>
              <li>
                <%= link_to end_user_path(current_end_user), class:'btn btn-light' do %>
                   マイページ
                <% end %>
              </li>
              <li>
                <%= link_to posts_path, class:'btn btn-light' do %>
                   投稿一覧
                <% end %>
              </li>
              <li>
                <%#= link_to cart_items_path, class:'btn btn-light' do %>

                <%# end %>
              </li>
              <li>
                <%= link_to destroy_end_user_session_path, method: :delete, class:'btn btn-light' do %>
                   ログアウト
                <% end %>
              </li>
            <% elsif admin_signed_in? %>
              <li>
                <%= link_to admins_posts_path, class:'btn btn-light' do %>
                   投稿一覧
                <% end %>
              </li>
              <li>
                <%= link_to admins_end_users_path, class:'btn btn-light' do %>
                   会員一覧
                <% end %>
              </li>
              <li>
                <%= link_to admins_top_path, class:'btn btn-light' do %>
                   注文履歴一覧
                <% end %>
              </li>
              <li>
                <%= link_to destroy_admin_session_path, method: :delete, class:'btn btn-light' do %>
                   ログアウト
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to about_path, class:'btn btn-light' do %>
                   About
                <% end %>
              </li>
              <li>
                <%= link_to posts_path, class:'btn btn-light' do %>
                   投稿一覧
                <% end %>
              </li>
              <li>
                <%= link_to new_end_user_registration_path, class:'btn btn-light' do %>
                   新規登録
                <% end %>
              </li>
              <li>
                <%= link_to new_end_user_session_path, class:'btn btn-light' do %>
                  ログイン
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
