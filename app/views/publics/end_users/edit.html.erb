<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4>プロフィール編集</h4>
        <% if @end_user.errors.any? %>
        <ul>
        <%= @end_user.errors.count %>errors
          <% @end_user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
          <%= form_with model: @end_user do |f| %>
            <div class="field">
              <%= f.label :プロフィール画像%>
              <%= f.file_field :profile_image %>
            </div>
            <div class="field">
              <%= f.label :name, "ユーザー名" %><br>
              <%= f.text_field :name, size: "25" %>
            </div>
            <div class="field">
              <%= f.label :introduction, "自己紹介文" %><br>
              <%= f.text_area :introduction, size: "40" %>
            </div>
            <div class="actions">
              <%= f.submit "保存する", class: "btn btn-info btn-lg" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
