<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>ユーザー情報編集</h2>
        <% if @user.errors.any? %>
        <ul>
        <%= @user.errors.count %>errors
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
          <%= form_with model: @end_user do |f| %>
            <div class="field">
              <%= f.label :name, "名前" %><br>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <%= f.file_field :image, "プロフィール画像" %>
              <%= f.file_field :profile_image %>
            </div>
            <div class="field">
              <%= f.label :introduction, "自己紹介" %><br>
              <%= f.text_area :introduction %>
            </div>
            <div class="actions">
              <%= f.submit "Update User", class: "btn btn-secondary" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
