<div>
  <%= flash[:notice] %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'publics/posts/sidebar', end_user: @end_user, post: @post %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>投稿</h2>
      <table class="table">
        <thead>
          <tr>
            <th><p>Title</p></th>
            <th><p>Opinion</p></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to post.title, post_path(post.id)  %>
                  <%#= image_tag book.user.get_profile_image(100,100) %>
             
              </td>
              <td><%= post.learning_time %></td>
              <td><%= post.learning_content %></td>
            </tr>
          <% end %>
          <%= paginate @posts %>
        </tbody>
      </table>
    </div>
  </div>
</div>
