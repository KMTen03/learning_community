<div>
  <%= flash[:notice] %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'publics/posts/sidebar', end_user: @end_user, post: @post %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h4>ユーザー投稿内容</h4>
      <table class="table">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>タイトル</th>
            <th>学習時間</th>
            <th>学習内容</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= image_tag post.end_user.get_profile_image(50,50) %>
              </td>
              <td>
                <%= link_to post.title, post_path(post.id) %>
              </td>
              <td><%= post.learning_time %></td>
              <td><%= post.learning_content %></td>
            </tr>
          <% end %>
          <%= paginate @posts %>
        </tbody>
      </table>
    </div>
  </div>
</div>
