
<div class="post-form">
  <%= form_with model: post do |f| %>
    <h4>学習内容投稿</h4>
    <div class="field">
      <%= f.label :title, "タイトル" %><br>
      <%= f.text_field :title, size: "25" %></br>
    </div>
    <div class="field">
      <%= f.label :learning_time, "学習時間" %><br>
      <%= f.number_field :learning_time, size: "25" %></br>
    </div>
    <div class="field">
      <%= f.label :learning_content, "学習内容" %><br>
      <%= f.text_area :learning_content, size: "30" %></br>
    </div>
    <div class="form-group m-5">タグ</div>
<!--<div class="row d-flex justify-content-start m-5">-->
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name, include_hidden: false) do |tag| %>
      <div class="form-check form-check-inline flex flex-wrap">
        <%= tag.label do %>
          <%= tag.check_box %>
          <%= tag.text %>
        <% end %>
      </div>
    <% end %>
  
<!--</div>-->
    <%= button_tag type: "submit", class:"btn btn-info" do %>
      <i class="fa-solid fa-pen-to-square"></i>投稿する
    <% end %>
  <% end %>
</div>