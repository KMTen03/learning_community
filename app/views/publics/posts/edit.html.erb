<div class="container">
  <div class="row">
    <div class="col-md-3">
        <h2>投稿内容編集</h2>
        <%= form_with model: @post do |f| %>
          <div class="field">
            <%= f.label :title, "タイトル" %><br>
            <%= f.text_field :title, size: "25" %></br>
          </div>
          <div class="field">
            <%= f.label :learning_content, "学習内容" %><br>
            <%= f.text_area :learning_content, size: "30" %></br>
          </div>
          <div class="form-group m-5">タグ</div>

          <!--<div class="row d-flex justify-content-start m-5">-->
              <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
                  <div class="form-check form-check-inline flex flex-wrap">
                      <%= tag.label do %>
                          <%= tag.check_box %>
                          <%= tag.text %>
                      <% end %>
                  </div>
              <% end %>
          <!--</div>-->
          <div class="actions">
            <%= f.submit '再投稿する' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
