<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'publics/posts/sidebar', end_user: @end_user, post: @post %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h3>投稿一覧</h3>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to end_user_path(@end_user.id) do %>
                  <%#= image end_user.get_profile_image(100,100) %>
                <%= post.title %>
                <% end %>
              </td>
              <td>
                <%= post.learning_time %>
              </td>
              <td>
                <%#= link_to post_path(post.id) do %>
                  <%= post.learning_content %>
                <%# end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>