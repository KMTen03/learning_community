<div class="container">
  <div class='row'>
    <table class="table border table-hover table-inverse">
      <% if @result == [] %>
        <h5 class="mt-3 text-center">検索結果がありません。</h5>
      <% elsif @post.present? %>
      <%# search_word = @q.name_cont %>
    <h5 class="mt-3">検索結果 "<%#= search_word %>"</h5>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <%# @post.each do |f| %>
          <td><%#= image_tag f.get_image(200,200), class: "image" %></td>
          <td><%#= link_to f.name, item_path(f.id) %></td>
          <td><%#= f.price_without_tax.to_s(:delimited) %></td>
        </tr>
        <%# end %>
      </tbody>
      <%# else %>
        <h5 class="mt-3 text-center">検索結果がありません。</h5>
      <% end %>
    </table>
  </div>
</div>