<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'publics/homes/about'%>
    </div>
    <div class="col-md-8 offset-md-1">
      <h3>ログイン</h3>
      
      <%= form_with model: @end_user, url: end_user_session_path do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログインIDを記録する" %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
      
      <%= render "publics/shared/links" %>
    </div>
  </div>
</div>