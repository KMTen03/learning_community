<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-7">
      <%= render 'publics/homes/about'%>
    </div>
    <div class="col-md-4 offset-md-1">
      <h3>ログイン</h3>
      
      <%= form_with model: @end_user, url: end_user_session_path do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class:'btn btn-primary' %>
        </div>
      <% end %>
      <%= button_to admin_session_path, class:'btn btn-warning', method: :post do %>
        <i class="fa-solid fa-arrow-right-to-bracket"></i>管理者ログイン
      <% end %>
      <%= render "publics/shared/links" %>
    </div>
  </div>
</div>